<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<%= form_for(@user) do |f| %>
  <div class="form-group">
  <%= f.label :family_name, '性' %>
  <%= f.text_field :family_name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :first_name, '名' %>
  <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :family_name_kana, 'セイ' %>
  <%= f.text_field :family_name_kana, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :first_name_kana, 'メイ' %>
  <%= f.text_field :first_name_kana, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :nickname, 'ニックネーム' %>
  <%= f.text_field :nickname, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :sex, '性別', class:'control-label' %>
      <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :faculty, '学域', class:'control-label' %>
      <%= f.select :faculty, [["",""], ["人間社会","humanity"], ["理工","science"], ["医薬保健","medical"] ],    class: 'form-control' %>
  </div>
  
  <div class="form-group">
      <%= f.label :subject, '学類', class:'control-label' %>
      <%= f.select :subject, [["",""], ["人文","jinbun"], ["経済","economics"], ["法","law"], ["地域創造", "local"], ["国際", "global"], ["数物科学", "physics"], ["物質科学", "chemical"], ["電子情報通信", "IT"], ["生命理工", "biology"], ["フロンティア工学", "frontier"], ["機械", "machine"], ["薬学", "medicine"], ["保健", "health"], ["医学", "medical"]  ],   class: 'form-control' %>
  </div>
  
  <div class="form-group">
  <%= f.label :course, 'コース' %>
  <%= f.text_field :course, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :nick_name, '研究室・ゼミ' %>
  <%= f.text_field :laboratory, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :club, '部活・サークル' %>
  <%= f.text_field :club, class: 'form-control' %>
  </div>

  
  
  <%= f.submit 'プロフィール編集を完了する', class: 'btn' %>
<% end %>